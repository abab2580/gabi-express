{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <!-- Page Title -->
    <title>Details product - Gabi Express</title>

  </head>
  <body>

    <!-- BEGIN HEADER -->
    <header class="l-header">
      <div id="l-nav" class="l-nav">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <nav class="navbar navbar-expand-md navbar-light">

              <a class="navbar-brand" href="{{ path ('home')}}">
                  <img src="img/logo-grand.png" class="img-fluid">
              </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav ml-auto py-4 py-md-0">
                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4 active">
                      <a class="nav-link" href="{{ path ('help')}}">Aide</a>
                    </li>
                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Mon compte</a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Recommander un ami</a>
                        <a class="dropdown-item" href="#">Mes transactions</a>
                        <a class="dropdown-item" href="#">Mon profil</a>
                        <a class="nav-link nav-auth" href="{{ path ('logout')}}">Deconnexion</a>
                      </div>
                    </li>
                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                      <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">EN</a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">FR</a>
                      </div>
                    </li>
                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                      <a class="nav-link nav-cart" data-cart="2" href="#">
                        <i class="fas fa-cart-arrow-down"></i>
                      </a>
                    </li>
                  </ul>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- END HEADER -->

    <!-- BEGIN MAIN CONTENT -->
    <main class="l-main">
      <div class="breadcrumb-block">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="breadcrumb-block-row">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path ('home')}}">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Supermarché Santa Lucia - Bonamoussadi</li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="l-search-products">
        <div class="container">
          <div class="row">
            <div class="col-lg-3">
              <h2 class="categorie-title">Categories</h2>
              <nav class="categorie-links d-none d-lg-block">
                <ul>
                  <li><a href="#">Tous les produits</a></li>
                  <li><a href="#">Alimentaire</a></li>
                  <li><a href="#">Bien être / Beauté</a></li>
                  <li><a href="#">Boissons / Vins</a></li>
                  <li><a href="#">Electromenager</a></li>
                  <li><a href="#">Femme</a></li>
                  <li><a href="#">Fournitures scolaires</a></li>
                  <li><a href="#">Fruits et légumes</a></li>
                  <li><a href="#">Hygiène / Santé</a></li>
                  <li><a href="#">Maison</a></li>
                  <li><a href="#">Nos packs</a></li>
                  <li><a href="#">Patisserie</a></li>
                  <li><a href="#">Petit-déjeuner</a></li>
                  <li><a href="#">Pour bébé</a></li>
                  <li><a href="#">Stylo et accessoires</a></li>
                  <li><a href="#">Viandes / Poissons</a></li>
                </ul>
              </nav>

              <div class="search-form d-lg-none">
                <form>
                  <div class="form-group">
                    <div class="form-control-large">
                      <select id="category" name="category" data-placeholder="Tous les produits">
                        <option value="">Tous les produits</option>
                        <option>Alimentaire</option>
                        <option>Bien être / Beauté</option>
                        <option>Boissons / Vins</option>
                        <option>Electromenager</option>
                        <option>Fournitures scolaires</option>
                        <option>Fruits et légumes</option>
                        <option>Hygiène / Santé</option>
                        <option>Maison</option>
                        <option>Nos packs</option>
                        <option>Patisserie</option>
                        <option>Petit-déjeuner</option>
                        <option>Pour bébé</option>
                        <option>Stylo et accessoires</option>
                        <option>Viandes / Poissons</option>
                      </select>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-lg-9">
              <div class="details-product">
                <div class="product-label">
                  <img src="img/product.jpg" alt="" class="img-product">
                  <div class="product-details">
                    <h1 class="product-title">
                      Lait Top Milk Nature 18 Grs
                    </h1>
                    <form action="#" class="detail-form">
                      <div class="form-group">
                        <label for="">Quantité</label>
                        <div class="form-qte">
                          <span class="controls">-</span>
                          <input type="text" readonly="readonly" value="1">
                          <span class="controls">+</span>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="">Prix</label>
                        <div class="form-price">
                          <span class="price">50 Fcfa</span>
                        </div>
                      </div>
                      <div class="btn-center">
                        <button class="btn btn-fullcolor">Ajouter au panier</button>
                      </div>
                    </form>
                  </div>
                </div>
                <br>
                  <h3 class="details-product-title">Description du produit</h3>
                  <p class="details-product-text">
                    Aucune description pour le moment
                  </p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

  </body>
</html>
{% endblock %}